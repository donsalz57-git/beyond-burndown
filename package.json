{
  "name": "beyond-burndown",
  "version": "1.0.0",
  "description": "Jira Forge dashboard gadget for feasibility analysis and compliance checking",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@forge/api": "^4.0.0",
    "@forge/resolver": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.test.js"],
    "collectCoverageFrom": ["src/**/*.js", "!src/index.js"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@forge)/)"
    ],
    "moduleNameMapper": {
      "^@forge/api$": "<rootDir>/test/__mocks__/@forge/api.js",
      "^@forge/resolver$": "<rootDir>/test/__mocks__/@forge/resolver.js"
    },
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"]
  },
  "license": "MIT"
}
