{
  "name": "beyond-burndown",
  "version": "1.0.0",
  "description": "Jira Forge dashboard gadget for feasibility analysis and compliance checking",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:jira": "playwright test --config=playwright.jira.config.js",
    "test:e2e:jira:headed": "playwright test --config=playwright.jira.config.js --headed"
  },
  "dependencies": {
    "@forge/api": "^4.0.0",
    "@forge/resolver": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.58.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@forge)/)"
    ],
    "moduleNameMapper": {
      "^@forge/api$": "<rootDir>/test/__mocks__/@forge/api.js",
      "^@forge/resolver$": "<rootDir>/test/__mocks__/@forge/resolver.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "license": "MIT"
}
